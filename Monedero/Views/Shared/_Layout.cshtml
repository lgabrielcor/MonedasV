<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Monedas", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Agencias", "Index", "Agencias", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Loterías", "Index", "Loterias", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Sorteos", "Sorteos", "Sorteos", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Vendedores", "Index", "Vendedores", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Chances jugados", "Index", "Chances", new { area = "" }, null)</li>

                    @*<li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>*@
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Monedas.NET</p>
        </footer>
    </div>


    @RenderSection("scripts", required: false)
</body>
</html>
