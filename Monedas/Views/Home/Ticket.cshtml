@model Servicios.DTO.JuegoDTO
@{
    ViewBag.Title = "Ticket";
    Layout = "~/Views/Shared/_blanco.cshtml";
}



<div id="encabezado">
    <h2>Lottingo</h2>
    <p id="serial">Serial: @Model.serial</p>
    <p id="agente">vendedor: @Model.vendedor</p>
    <p id="fecha">Fecha: @Model.fecha</p>
    <p id="loteria">Lotería: @Model.loteria</p>
    <p id="sorteo">Sorteo: @Model.sorteo</p>
    <p id="fecha_sort">Fecha sort: @Model.fechaSorteo</p>
    <p id="check">@Model.codigoDeValidacion</p>
    <p id="phone">@Model.telefono</p>
</div>
<div id="juego">
    <table>
        <thead>
            <tr>
                <th>NUMERO</th>
                <th>DIRECTO</th>
                <th>COMBINADO</th>
                <th>PATA</th>
                <th>UNA</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.apuestas)
            {
                <tr>
                    <td>@item.número</td>
                    <td style="text-align:right">$@item.directo</td>
                    <td style="text-align:right">$@item.combinado</td>
                    <td style="text-align:right">$@item.pata</td>
                    <td style="text-align:right">$@item.uña</td>
                </tr>
            }
        </tbody>
        @*<tfoot>
            <tr id="total">
                <td style="font-weight:bold">Totales</td>
                <td style="text-align:right;font-weight:bold">$2000</td>
                <td style="text-align:right;font-weight:bold">$2000</td>
                <td style="text-align:right;font-weight:bold">$200</td>
                <td style="text-align:right;font-weight:bold">$200</td>
            </tr>
        </tfoot>*@
    </table>
</div>
<hr style="border:1px dotted blue;">
<div id="total">
    <div class="col-6">
        <h3 style="font-weight:bold;display:inline">Apuesta: $@Model.totalApuesta</h3>
    </div>
</div>
<br />
<div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-6">
                <button id="imprimir" class="btn btn-lg btn-success" onclick="window.print()">Imprimir</button>
            </div>
            <div class="col-6">
                @Html.ActionLink("Volver", "Juego", "Home", new { @class = "btn btn-lg btn-danger" })
            </div>
        </div>
    </div>

</div>


